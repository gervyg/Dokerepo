<button type="button" class="btn btn-danger" onclick="del('{{id}}')" id="eliminar" >Eliminar</button>
<a href="/">Volver</a>

<script>
  function del(id) { 
    axios.delete("http://localhost:4000/todos/"+id)
        .then((response) => {
            console.log(response);
            alert("Tarea eliminada.")
            window.location.href = "/";
          });
  }
</script>






